def parse_csv(text)
    new  = []
    new.push($+) while ($' ? $' : text) =~ /"([^\"\\]*(?:\\.[^\"\\]*)*)",?|([^,]+),?|,/
    new.push(nil) if text[-1..-1] == ','
    new
end  

