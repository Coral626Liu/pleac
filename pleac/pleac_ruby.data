def wrap(str, max_size)
    all = []
    line = ''
    for l in str.split
        if (line+l).length >= max_size
            all.push(line)
            line = ''
        end
        line += l + ' '
    end
    all.push(line).join("\n")
end

print wrap(string, 20)


