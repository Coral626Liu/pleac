        DATE    =&gt; $date,
        NUMBER  =&gt; scalar @msgs,
        TEXT    =&gt; '',
    }; 
} continue {
    $msgs[-1]{TEXT} .= $_;
}

for my $msg (sort {     
                        $a-&gt;{SUBJECT} cmp $b-&gt;{SUBJECT} 
                                       || 
                        $a-&gt;{DATE}    cmp $b-&gt;{DATE} 
                                       || 
                        $a-&gt;{NUMBER}  &lt;=&gt; $b-&gt;{NUMBER} 

                  } @msgs
         )
{
    print $msg-&gt;{TEXT};
