for (@ARGV) {
    if (!open($fh, (/^[^&gt;|]/ &amp;&amp; $mode) . $_)) {
        warn &quot;$0: cannot open $_: $!\n&quot;; # like sun's; i prefer die
        $status++;
        next;
    }
    select((select($fh), $| = 1)[0]) if $unbuffer;
    $fh{$fh++} = $_;
}

while (&lt;STDIN&gt;) {
    for $fh (keys %fh) {
        print $fh $_;
    }
}

for $fh (keys %fh) {
