sub order_text {
    my $html = '';

    if (param(&quot;shirt_count&quot;)) {
        $html .= p(&quot;You have ordered &quot;, param(&quot;shirt_count&quot;),
           &quot; shirts of size &quot;,  param(&quot;shirt_size&quot;),
