# helper function to produce a nice string in the form HOST:PORT
sub peerinfo {
    my $sock = shift;
    my $hostinfo = gethostbyaddr($sock-&gt;peeraddr);
    return sprintf(&quot;%s:%s&quot;, 
                    $hostinfo-&gt;name || $sock-&gt;peerhost, 
