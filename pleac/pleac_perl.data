sub cut2fmt {
    my(@positions) = @_;
    my $template   = '';
    my $lastpos    = 1;
    foreach $place (@positions) {
        $template .= &quot;A&quot; . ($place - $lastpos) . &quot; &quot;;
        $lastpos   = $place;
    }
    $template .= &quot;A*&quot;;
    return $template;
