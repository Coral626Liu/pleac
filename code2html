files=$(perl -e 'print join(" ", map { qq("$_") } @ARGV), "\n"' $*)
if [ -e ./misc/htmlize.el ] ; then
  emacs -batch -l ./misc/htmlize.el --eval "(progn (htmlize-many-files '($files)) (kill-emacs))"
else
  echo "Warning, ./misc/htmlize.el, run from project root."
  for inf in $files ; do
	if test ${inf:0:1} = "\"" ; then
	  inf=${inf:1}
	  inf=${inf%\"}
	fi
    outf=${inf%.*}.html${suffix}
    enscript -E --style=emacs_verbose --color -w html -o $outf $inf
  done
fi
